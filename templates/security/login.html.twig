{% extends 'base.html.twig' %}

{% block title %}Sign in!{% endblock %}

{% block body %}


<div class="container mt-4">

<h1>Login Page !</h1>

{% if error %}
<p class="alert alert-danger"> {{error.messageKey }} </p>
{% endif %}

<form action="{{ path('login') }}" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Username</label>
      <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"  type="text" name="_username" value="{{ last_username }}" placeholder="Username Here .....">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input  class="form-control" id="exampleInputPassword1" type="password" name="_password"  placeholder="Password Here .....">
    </div>
    
    <button type="submit" class="btn btn-primary">Sign in</button>
  </form>

</div>
{% endblock %}
