{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>User</h1>

    <table class="table table-striped mt-4" style="border:1px solid #0000004f">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>
                    {% if user.role == '' %}
                       <span style="background-color: red;color: #fff;padding: 5px;border-radius: 8px;"> No Role Yet  </span>
                    {% else %}
                        {{user.role}}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-warning">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-info">edit</a>
</div>

{% endblock %}
